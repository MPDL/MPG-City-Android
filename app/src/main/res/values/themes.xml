<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MPGCityMap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MPGCityMap.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/splash_16_9</item>
    </style>

    <style name="Theme.MPGCityMap.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_margin">0dp</item>
    </style>


    <style name="Theme.MPGCityMap.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MPGCityMap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="margintran" >
        <!-- 设置允许窗口半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 引用Android系统的动画半透明样式 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <!-- 设定窗口背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 隐藏窗口标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设定文字前景色 -->
        <item name="android:colorForeground">#fff</item>
    </style>
</resources>